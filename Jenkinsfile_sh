pipeline {
    agent any
    environment {
        DISABLE_AUTH = 'true'
        DB_ENGINE    = 'sqlite'
    }
    stages {
        stage('build Maven') {
            steps {
                sh 'java --version'
                echo "Database engine is ${DB_ENGINE}"
                echo "DISABLE_AUTH is ${DISABLE_AUTH}"
                sh './mvn install'
            }
        }
        stage('build npm') {
            steps {
                sh 'node -v'
                sh 'npm -v'
            }
        }
    }
}
